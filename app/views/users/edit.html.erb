<% provide(:title, "Account Settings") %>

<div class="center container">
  <h1>Account Settings</h1>
  <h4>ユーザー設定</h4>
  <div style="margin-top: 130px; line-height: 2;">
    <p>・<%= @user.name %> (Email: <%= @user.email %>) のアカウントを削除しますか？</p>
    <%= link_to "戻る", @user, style: "display: inline-block; padding-right: 20px" %>
    <%= link_to "削除", @user, method: :delete, class: "btn btn-default",
                        data: { confirm: "アカウントを削除してよろしいですか？\n" +
                                "一度削除すると、元に戻すことはできません。" } %>
  </div>
</div>
